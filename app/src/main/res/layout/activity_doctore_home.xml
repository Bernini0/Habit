<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctoreHomeActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/home_card_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_margin="15dp"
                app:cardBackgroundColor="#BC9E9E"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@drawable/home_background_image"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:alpha="0.8"
                        android:background="#212226"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/textViewdocotor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:fontFamily="@font/poppins"
                                android:gravity="center_horizontal"
                                android:text="Welcome!"
                                android:textColor="#FFFFFF"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:typeface="normal" />
                            <Space
                                android:layout_width="10dp"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:id="@+id/doctorUsernameTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="37dp"
                                android:text="Username"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/white"/>

                        </LinearLayout>
                        <TextView
                            android:id="@+id/textView1243"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:gravity="center_horizontal"
                            android:text="Lets begin our journey together"
                            android:textColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            app:srcCompat="@drawable/ic_baseline_bike_scooter_24" />

                        <TextView
                            android:id="@+id/textView1334"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_thin"
                            android:gravity="center_horizontal"
                            android:letterSpacing="0.1
    "
                            android:text="BRAVING ANXIETY"
                            android:textColor="#FFFFFF"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/textView1434"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:gravity="center_horizontal"
                            android:text="Get the tools to manage and move through your anziety so you can feel calm and capable every day"
                            android:textColor="#FFFFFF"
                            android:textStyle="italic" />

                        <Button
                            android:id="@+id/button434"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#FAFAFA"
                            android:text="Get started" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="fill"
                android:layout_margin="15dp"
                app:cardBackgroundColor="#62B160"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/self_care_container34"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView634"
                        android:layout_width="32dp"
                        android:layout_height="31dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="18dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_baseline_check_24" />

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins"
                        android:text="Appointments"
                        android:textColor="#000000"
                        app:layout_constraintStart_toEndOf="@+id/imageView634"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView634"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="See Who Wants to connect With You"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imageView634"
                        app:layout_constraintTop_toBottomOf="@+id/textView34" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/consultation_card34"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_margin="15dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/consultation_gradiant_background">

                    <TextView
                        android:id="@+id/TextViewConsultation34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Consulation"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView2034"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="See Your Patients "
                        android:textColor="#FFFFFF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/TextViewConsultation34" />

                    <ImageView
                        android:id="@+id/imageView2134"
                        android:layout_width="76dp"
                        android:layout_height="82dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2034"
                        app:srcCompat="@drawable/ic_baseline_medical_services_24" />

                    <TextView
                        android:id="@+id/textView2234"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins"
                        android:text="Messages"
                        android:textColor="#62B160"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/imageView2134"
                        app:layout_constraintTop_toBottomOf="@+id/textView2034" />

                    <TextView
                        android:id="@+id/textView2334"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/poppins"
                        android:text="Browse from a list of your patients"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imageView2134"
                        app:layout_constraintTop_toBottomOf="@+id/textView2234" />

                    <TextView
                        android:id="@+id/textView2434"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/poppins"
                        android:text="See how your patients are doing right now"
                        android:textColor="#CACACA"
                        android:textSize="10sp"
                        app:layout_constraintStart_toEndOf="@+id/imageView2134"
                        app:layout_constraintTop_toBottomOf="@+id/textView2334" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/chat_card34"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_margin="15dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/consultation_gradiant_background"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/textViewConsultation34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="72dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins"
                        android:text="Log Out"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView2234"
                        android:layout_width="39dp"
                        android:layout_height="37dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_baseline_account_circle_24" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>